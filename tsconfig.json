{
    "compilerOptions": {
        "target": "ESNext",
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "outDir": "dist/bin",
        "removeComments": true,
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "declarationMap": true,
        "declarationDir": "dist/types",
    },
    "exclude": [
        "node_modules"
    ],
}